@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Register")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("User Name")
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.UserNames)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item)
                </td>
                <td>
                    @Html.ActionLink("Edit", "ManageUser", new { id = item })
                </td>
            </tr>
        }

    </table>
</div>

