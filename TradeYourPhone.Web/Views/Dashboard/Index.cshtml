@model TradeYourPhone.Web.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dashboard</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-2">
            <span>From</span> @Html.EditorFor(m => m.DateFrom, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-2">
            <span>To</span> @Html.EditorFor(m => m.DateTo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-2">
            <br />
            <input type="submit" value="Go" class="btn btn-default" />
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="col-md-4">
            <h2>Quotes</h2>
            <div class="form-group">
                @Html.Label("No of Created Quotes", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.NoOfCreatedQuotes, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group">
                @Html.Label("No of Finalised Quotes", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.NoOfFinalisedQuotes, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group">
                @Html.Label("No of Completed Quotes", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.NoOfCompletedQuotes, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="col-md-4">
            <h2>Expenditure</h2>
            <div class="form-group">
                @Html.Label("Total Amount To Pay", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TotalAmountToPay, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group">
                @Html.Label("Total Amount Paid", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TotalAmountPaid, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="col-md-4">
            <h2>Income</h2>
            <div class="form-group">
                @Html.Label("Total Devices Sold", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TotalDevicesSold, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="form-group">
                @Html.Label("Total Income Amount", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TotalIncomeAmount, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
    </div>
</div>
