<!DOCTYPE html>
<html ng-app="typAdmin">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title ng-bind="title"></title>
    <meta name="description" ng-attr-content={{description}} />
    <meta name="fragment" content="!">
    @Styles.Render("~/bundles/adminCss")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
    <link href="~/Content/font-awesome.min.css" type="text/css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Marcellus+SC|Roboto+Slab' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Noto+Serif' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/Images/favicon.ico" type="image/x-icon">
    <script type="text/javascript" src="https://www.googleadservices.com/pagead/conversion_async.js" charset="utf-8"></script>
    <base href="/">
</head>
<body ng-controller="IndexCtrl">
    <div id="main" class="container-fluid">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <div class="smaller-title">
                            <img src="~/Content/Images/logoAndName.png" />
                        </div>
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul ng-if="authentication.isAuth" class="nav navbar-nav" ng-cloak>
                        <li><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li><a href="/Admin/Quotes">Quotes</a></li>
                        <li><a href="/Admin/Phones">Phones</a></li>
                        <li class="dropdown" ng-cloak>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Admin/PhoneModels">Phone Models</a></li>
                                <li><a href="/Admin/PhoneMakes">Phone Makes</a></li>
                                <li><a href="/Admin/CacheManager">Cache Manager</a></li>
                                <li><a href="/Admin/Configuration">Config Data</a></li>
                                <li><a href="#" ng-click="logOut()">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div>
                <div class="col-md-12 content col-mobile" ng-if='!isRouteLoading' ng-view autoscroll="true">

                </div>
                <div class="col-md-12 content col-mobile">
                    <route-loading-indicator />
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/externalLibs")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularUIBootstrap")
    @Scripts.Render("~/bundles/angularModules")
    @Scripts.Render("~/bundles/angularAdminApp")

</body>
</html>
