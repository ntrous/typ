<body ng-controller="IndexCtrl">
    <link ng-href="~/Content/{{cssFile}}.less" type="text/css" rel="stylesheet" />
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '961511493913207',
                xfbml: true,
                version: 'v2.4'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="main" class="container-fluid">
        <div class="top">
            <div class="top-banner row navbar-fixed-top hidden-xs">
                <div class="container-fluid">
                    <span class="col-md-10 col-md-offset-1">
                        <span class="col-md-6 pull-left"><a href="/FreeShipping"><i class="fa fa-truck"></i>Free Shipping</a>   <a href="/PriceGuarantee"><i class="fa fa-usd"></i>Best Price</a></span>
                        <span ng-show="!authentication.isAuth" class="col-md-6" ng-cloak>
                            <a class="pull-right" target="_blank" href="https://plus.google.com/b/100980338413352678809/100980338413352678809/about/p/pub">
                                <i class="fa fa-google-plus"></i>
                            </a>
                            <a class="pull-right" target="_blank" href="http://www.facebook.com/tradeyourphoneau">
                                <i class="fa fa-facebook"></i>
                            </a>
                            <a class="pull-right" href="tel:0484591716">
                                <i class="fa fa-phone"></i>
                            </a>
                            <a class="pull-right" href="mailto:support@tradeyourphone.com.au" target="_blank">
                                <i class="fa fa-envelope"></i>
                            </a>
                        </span>
                        <span ng-show="authentication.isAuth" ng-cloak>
                            <a class="pull-right" href="#" ng-click="logOut()">
                                <i>Logout</i>
                            </a>
                            <a class="pull-right" href="#">
                                <i>Welcome {{authentication.userName | capitalize}}</i>
                            </a>
                        </span>
                    </span>
                </div>
            </div>
        </div>
        <div class="pageHeading hidden-xs">
            <div class="title">
                <a href="/"><img src="~/Content/Images/logoAndName.png" alt="Trade Your Phone Logo" /></a>
            </div>
        </div>

        <nav class="navbar navbar-inverse navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="pageHeading visible-xs">
                        <div class="smaller-title">
                            <a href="/"><img src="~/Content/Images/logoAndName.png" alt="Trade Your Phone Logo" /></a>
                        </div>
                    </div>
                </div>

                <div class="collapse navbar-collapse" id="typ-navigation">
                    <ul ng-if="!authentication.isAuth" class="nav navbar-nav">
                        <li ng-class="{active:isActive('/')}"><a href="/" data-toggle="collapse" data-target=".navbar-collapse.in">Home</a></li>
                        <li ng-class="{active:isActive('/WhatWeDo')}"><a href="/WhatWeDo" data-toggle="collapse" data-target=".navbar-collapse.in">What We Do</a></li>
                        <li ng-class="{active:isActive('/Support')}"><a href="/Support" data-toggle="collapse" data-target=".navbar-collapse.in">Support</a></li>
                        <li ng-class="{active:isActive('/Contact')}"><a href="/Contact" data-toggle="collapse" data-target=".navbar-collapse.in">Contact</a></li>
                        <li ng-class="{active:isActive('/Blog')}"><a href="/Blog" data-toggle="collapse" data-target=".navbar-collapse.in">Blog</a></li>
                    </ul>
                    <ul ng-if="authentication.isAuth" class="nav navbar-nav" ng-cloak>
                        <li><a href="/Admin/Dashboard">Dashboard</a></li>
                        <li><a href="/Admin/Quotes">Quotes</a></li>
                        <li><a href="/Admin/Phones">Phones</a></li>
                        <li class="dropdown" ng-cloak>
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                Admin
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Admin/PhoneModels">Phone Models</a></li>
                                <li><a href="/Admin/PhoneMakes">Phone Makes</a></li>
                                <li><a href="/Admin/CacheManager">Cache Manager</a></li>
                                <li><a href="/Admin/Configuration">Config Data</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>

        </nav>
        <div class="container-fluid">
            <div>
                <div class="col-md-12 content col-mobile" ng-if='!isRouteLoading' ng-view autoscroll="true">

                </div>
                <div class="col-md-12 content col-mobile">
                    <route-loading-indicator />
                </div>
            </div>
        </div>
    </div>
    <footer class="navbar-bottom navFooter container-fluid">
        <div class="row footer-text">
            <div class="col-md-12 col-mobile">
                <div class="col-md-4">
                    <p>Trade Your Phone 2015 | ABN: 56277959838</p>
                    <p><a href="/CustomerReviews"><i class="fa fa-heart-o"></i> &nbsp; Love Trade Your Phone? &nbsp; Why Not Leave Us a Review!</a></p>
                    <p><a href="/sell-your-iphone">Sell your iPhone</a></p>
                </div>
                <div class="col-md-4 centre">
                    <p><a href="/Privacy">Privacy</a> | <a href="/TermsAndConditions">Terms and Conditions</a> | <a href="/Contact">Contact Us</a> </p>
                    <div class="fb-like fb-footer" data-href="https://facebook.com/tradeyourphoneau" data-layout="button_count" data-action="like" data-show-faces="true" data-share="true"></div>
                </div>
                <div class="col-md-4">
                    <p class="pull-right">&copy; @DateTime.Now.Year - Trade Your Phone @typeof(MvcApplication).Assembly.GetName().Version.Major.ToString().@typeof(MvcApplication).Assembly.GetName().Version.Minor.ToString().@typeof(MvcApplication).Assembly.GetName().Version.Build.ToString()</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/externalLibs")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularUIBootstrap")
